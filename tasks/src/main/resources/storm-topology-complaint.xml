			<map>
				<entry key="ComplaintViwedByPoliticalAdminSpout" value="ComplaintViwedByPoliticalAdminStream" />
			</map>
		</property>
		<property name="fields">
			<list>
				<value>Message</value>
				<value>MessageType</value>
				<value>DeviceList</value>
			</list>
		</property>

	</bean>
	
