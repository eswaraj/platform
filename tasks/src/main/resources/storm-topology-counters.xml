				<ref bean="CategoryHourlyCounterBoltBean" />
				<ref bean="LocationHourlyCounterBoltBean" />
				<ref bean="LocationCategoryHourlyCounterBoltBean" />
				
			</list>
		</property>
	</bean>
	
	<bean id="ComplaintCreatedSpoutBean" class="com.eswaraj.tasks.spout.ComplaintCreatedSpout">
		<property name="componentId" value="ComplaintCreatedSpout" />
		<property name="outputStream" value="ComplaintCreatedStream" />
		
		<!-- Properties define which services will be available for spout -->
		<property name="initializeRedisServices" value="false" />
		<property name="initializeQueueServices" value="true" />
		<property name="initializeDbServices" value="false" />

		<!-- Redis -->
		<property name="redisUrl" value="${redis_server}" />
		<property name="redisPort" value="${redis_port}" />
		<!-- Neo4j -->
		<property name="dbUrl" value="${db_url}" />
		<!-- Aws Queue -->
		<property name="regions" value="${aws_region}" />
		<property name="accessKey" value="${aws_access_key}" />
		<property name="secretKey" value="${aws_access_secret}" />

		<!-- Queue Names -->
		<property name="awsLocationQueueName" value="${aws_location_file_queue_name}" />
		<property name="awsCategoryUpdateQueueName" value="${aws_category_queue_name}" />
		<property name="awsComplaintCreatedQueueName" value="${aws_complaint_created_queue_name}" />

	</bean>

	<bean id="GlobalHourlyCounterBoltBean" class="com.eswaraj.tasks.bolt.counter.starter.GlobalHourlyCounterBolt">
		<property name="componentId" value="GlobalHourlyCounterBolt" />
		<property name="outputStream" value="GlobalHourlyCounterStream" />
		<property name="paralellism" value="1" />
		<!-- Properties define which services will be available for Bolt -->
		<property name="initializeRedisServices" value="true" />
		<property name="initializeQueueServices" value="false" />
		<property name="initializeDbServices" value="true" />
		<property name="sourceComponentStreams">
			<map>
				<entry key="ComplaintCreatedSpout" value="ComplaintCreatedStream" />
			</map>
		</property>

		<!-- Redis -->
		<property name="redisUrl" value="${redis_server}" />
		<property name="redisPort" value="${redis_port}" />
		<!-- Neo4j -->
		<property name="dbUrl" value="${db_url}" />
		<!-- Aws Queue -->
		<property name="regions" value="${aws_region}" />
		<property name="accessKey" value="${aws_access_key}" />
		<property name="secretKey" value="${aws_access_secret}" />

		<!-- Queue Names -->
		<property name="awsLocationQueueName" value="${aws_location_file_queue_name}" />
		<property name="awsCategoryUpdateQueueName" value="${aws_category_queue_name}" />
		<property name="awsComplaintCreatedQueueName" value="${aws_complaint_created_queue_name}" />

	</bean>
	
